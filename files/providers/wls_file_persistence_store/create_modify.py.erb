# check the domain else we need to skip this (done in wls_access.rb)
real_domain='<%= domain %>'

wlst_action = '<%= wlst_action %>'

name           = '<%= file_persistence_name %>'
directory      = '<%= directory %>'
target         = '<%= target %>'
targettype     = '<%= targettype %>'

edit()
startEdit()

try:
    cd('/')
    if wlst_action == 'create':
        cmo.createFileStore(name)

    cd('/FileStores/' + name)
    set_attribute_value('Directory', directory, use_default_value_when_empty)
    if not targettype:
        print('target type is not passed, So not changeing the Target')
    else:
        set('Targets', jarray.array([ObjectName('com.bea:Name=' + target + ',Type=' + targettype)], ObjectName))    


    save()
    activate()
    report_back_success()

except:
    report_back_error()
