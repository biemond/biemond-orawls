def quote(text):
    if text or text == '':
        return "\"" + str(text).replace("\"", "\"\"") + "\""
    else:
        return ""

def open_file(fields):
    f = open("/tmp/wlstScript.out", "w")
    print >>f, fields
    return f

def add_index_entry(file_handle, values):
    print >>file_handle, ";".join(map(quote, values))

