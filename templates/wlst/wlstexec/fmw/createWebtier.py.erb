#$ORACLE_HOME/ohs/common/bin/wlst.sh

wlsUser    = '<%= @weblogic_user %>'
password   = sys.argv[1] 
machine    = '<%= @adminserver_address %>'
portNumber = '<%= @adminserver_port %>'

action_name   = '<%= @action_name %>'
instance_name = '<%= @instance_name %>'
machine_name  = '<%= @machine_name %>'

connect(wlsUser,password,'t3://'+machine+':'+portNumber)

if action_name == "create":
  createOHSInstance(instanceName=instance_name, machine=machine_name)
else:
  deleteOHSInstance(instanceName=instance_name)
